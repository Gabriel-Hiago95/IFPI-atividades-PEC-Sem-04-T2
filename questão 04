def main():
    def conversor_minutos(min):
        h = min // 60
        m = min % 60
        return h, m
    tot_min = int(input('Informe um valor em minutos a ser convertido: ').strip())
    hora, minutos = conversor_minutos(tot_min)
    print(f'{tot_min} minutos equivalem a {hora} horas e {minutos} minutos')
if __name__ == '__main__':
    main()
